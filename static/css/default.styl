@import "../../src/common/stylus/mixin.styl"
$main-color = rgb(36, 36, 36)
$button-color = #c08e3b

.main-content
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: .7rem
  .g-header /*头部*/
    width: 100%
    height: 5.19rem
    position: absolute
    text-align: center
    display: -none
    .swiper-slide
      a
        width: 100%
        height: 100%
        display: inline-block
    .swiper-pagination-bullet
      width: .1rem
      height: .1rem
    .g-logo
      position: absolute
      top: .16rem
      left: .42rem
      z-index: 2
      width: 1.03rem
      height .44rem
  .g-content /*主干*/
    width: 8.8rem
    margin: 0 auto
    overflow-x: hidden
    overflow-y: auto
    position: absolute
    top: 5.19rem
    left: 0
    right: 0
    bottom: 0
    .home-index
      .info
        padding: .3rem 0
        width: 8.8rem
        margin: 0 auto
        > h2
          margin-bottom: .2rem
          width: 100%
          .name
            float: left
            font-size: .20rem
          .more
            float: right
            font-size: .18rem
            position: relative
            right: .31rem
            .icon_more
              position: absolute
              font-size: .22rem
              top: -.03rem
              right: -.3rem
              color: $button-color
        .content
          display: flex
          max-height: 2.94rem
          .left
            position: relative
            flex: 0 0 4.9rem
            a
              height: 100%
            img
              width: 4.9rem
              height: 2.94rem
            .present
              width: 4.9rem
              position: absolute
              padding: .1rem
              line-height: .25rem
              bottom: 0
              color: #fff
              background: rgba(0, 0, 0, .5)
              .title
                font-size: .16rem
                white-space: nowrap
                text-overflow: ellipsis
                overflow: hidden
          .right
            flex: 1
            width: 3.9rem
            padding: 0 .2rem
            background-image: -webkit-linear-gradient(-135deg, #8564e3, #3c87d3)
            background-image: linear-gradient(-135deg, #8564e3, #3c87d3)
            li
              a
                display: flex
                line-height: .37rem
                .title
                  flex: 0 0 2.7rem
                  color: #fff
                  white-space: nowrap
                  text-overflow: ellipsis
                  overflow: hidden
                .time
                  flex: 1
                  color: #fff
                  text-align: right
      .column
        background: #f0f0f0
        .content
          padding: .3rem 0
          width: 8.8rem
          margin: 0 auto
          overflow: hidden
          padding-bottom: .1rem
          li
            display: inline-block
            width: 2.8rem
            float: left
            background: #fff
            height: 1.9rem
            border: 1px solid #dedede
            padding: .25rem .15rem
            margin-right: .2rem
            margin-bottom: .2rem
            a
              width: 100%
              height: 100%
              overflow: hidden
            .title
              font-size: .2rem
            .text
              line-height: .3rem
            &:nth-child(3n)
              margin-right: 0
      .nav
        width: 8.8rem
        padding: .3rem 0
        margin: 0 auto
        background: #fff
        position: relative
        .top
          display: inline-block
          .class
            span
              width: 100%
              height: 100%
              display: block
              border: 1px solid #fff
              font-size: .24rem
            text-align: center
            width: 1.98rem
            height: .88rem
            color: #fff
            line-height: .72rem
            margin-right: .28rem
            padding: .08rem
          .class.active
            position: relative
            &:after
              content: ''
              width: 0
              height: 0
              position: absolute
              bottom: -.12rem
              left: 50%
              margin-left: - 0.04rem
              display: inline-block
              border-top: .08rem solid transparent
              border-bottom: .08rem solid transparent
              border-left: .08rem solid #e9b01a
              transform: rotate(90deg)
          &:last-child
            .class
              margin-right: 0
        .top.one
          .class
            background-image: -webkit-linear-gradient(0deg, #e9ac1a, #e9c91a)
            background-image: linear-gradient(0deg, #e9ac1a, #e9c91a)
            &.active
              &:after
                border-left: .08rem solid #e9b01a
          .bottom
            li:first-child
              border-color: #e9b01a
              a
                color: #e9b01a
        .top.two
          .class
            background-image: -webkit-linear-gradient(0deg, #3c87d3, #8564e3)
            background-image: linear-gradient(0deg, #3c87d3, #8564e3)
            &.active
              &:after
                border-left: .08rem solid #3c87d3
          .bottom
            li:first-child
              border-color: #8564e3
              a
                color: #8564e3
        .top.three
          .class
            background-image: -webkit-linear-gradient(0deg, #ee6e5b, #f29a4c)
            background-image: linear-gradient(0deg, #ee6e5b, #f29a4c)
            &.active
              &:after
                border-left: .08rem solid #ee6e5b
          .bottom
            li:first-child
              border-color: #ee6e5b
              a
                color: #ee6e5b
        .top.four
          .class
            background-image: -webkit-linear-gradient(0deg, #2baf85, #54d5bb)
            background-image: linear-gradient(0deg, #2baf85, #54d5bb)
            &.active
              &:after
                border-left: .08rem solid #2baf85
          .bottom
            li:first-child
              border-color: #2baf85
              a
                color: #2baf85
        .bottom
          position: absolute
          left: 0
          width: 100%
          li
            display: inline-block
            width: 1.2rem
            height: .38rem
            line-height: .38rem
            text-align: center
            border: 1px solid
            float: left
            padding: 0 .1rem
            overflow: hidden
            margin-top: .3rem
            margin-right: .65rem
            border-radius: .3rem
            &:nth-child(5n)
              margin-right: 0
    .classification-list
      height: 100%
      overflow: hidden
      > div
        > h3
          padding: .2rem 0
          font-size: .16rem
          span
            font-size: .16rem
            color: $button-color
      .info-page
        .title
          font-size: .24rem
          line-height: .8rem
          text-align: center
          font-weight: 600
          white-space: nowrap
          overflow: hidden
          text-overflow: ellipsis
        .content
          font-size: .16rem
          line-height: .36rem
      .list
        .swiper-content
          height: 11.5rem
          position: relative
        .swiper-pagination
          left: 0
          right: 0
          text-align: center
          bottom: 0.3rem
          li
            width: .12rem
            height: .12rem
            border: 1px solid $button-color
            margin: 0.05rem
            &.active
              background: $button-color
        .box
          overflow: hidden
          position: absolute
          width: 100%
          left: 0
          top: 0
          transition all .5s
          > li
            p
              width: 1.54rem
              overflow: hidden
              text-overflow: ellipsis
              white-space: nowrap
            text-align: center
            display: inline-block
            float: left
            margin-right: .88rem
            margin-bottom: .25rem
            img
              width: 1.54rem
              height: 2.05rem
            .title
              font-size: .18rem
              line-height: .4rem
            .author
              font-size: .16rem
              color: #888
            &:nth-child(4n)
              margin-right: 0
        .box.Periodical
          > li
            width: 33.33%
            position: relative
            margin-right: 0
            margin-bottom: .25rem
            .title
              margin-top: .4rem
            img
              width: 1.84rem
              height: 2.5rem
            &:nth-child(3n-2) i
              bg-image('book_shop')
              background-size: 100% 100%
              width: 300%
              height: .5rem
              display: inline-block
              position: absolute
              bottom: .4rem
              left: 0
        .box.curriculum
          > li
            margin-right: .5rem
            img
              width: 2.6rem
              height: 1.6rem
            &:nth-child(3n)
              margin-right: 0
        .box.data-base
          > li
            margin-right: .95rem
            img
              width: 2.3rem
              height: 1.41rem
            &:nth-child(3n)
              margin-right: 0
      .navigation /*导航区*/
        padding: .2rem 0
        font-size: .16rem
        width: 100%
        *
          font-size: .16rem
        border-1px(#d1d1d1)
        i
          font-size: .18rem
          margin-right: .05rem
          position: relative
          top: .01rem
        .home
          float: left
          display: inline-block
        .domain
          float: right
          display: inline-block
          .left, .right
            display: inline-block
            float: left
            position: relative
            & >.active
              color: $button-color
            .tabulation
              background: #fff
              width: 4.1rem
              position: absolute
              padding: 0 .3rem
              z-index: 1
              top: .39rem
              left: -1.63rem
              font-size: 0
              padding-top: .2rem
              border: 1px solid $button-color
              transition: all 0.5s
              &.fade-enter-active, &.fade-leave-active
                opacity: 1
              &.fade-enter, &.fade-leave-active
                opacity: 0
              li
                width: .9rem
                height: .34rem
                text-align: center
                overflow: hidden
                display: inline-block
                line-height: .34rem
                border-radius: .3rem
                margin-right: .39rem
                margin-bottom: 0.2rem
                border: 1px solid $button-color
                a
                  width: 100%
                  &.active
                    color: #fff
                    background: $button-color
                    border: 1px solid $button-color
                &.active
                  color: #fff
                  background: $button-color
                  border: 1px solid $button-color
                &:nth-child(3n)
                  margin-right: 0
              &:after
                content: ''
                width: 0
                height: 0
                position: absolute
                top: -.13rem
                left: 2.05rem
                display: inline-block
                border-top: .08rem solid transparent
                border-bottom: .08rem solid transparent
                border-left: .08rem solid $button-color
                transform: rotate(-90deg)
          .right
            margin-left: 0.5rem
            .tabulation
              text-align: center
              width: .78rem
              padding: .2rem 0
              left: .27rem
              li
                width: .5rem
                height: .30rem
                line-height: .30rem
                border-radius: .2rem
                margin-bottom: 0.1rem
                margin-right: 0
                border: none
                &:last-child
                  margin-bottom: 0
              &:after
                left: .34rem

      .details-page
        position: fixed
        z-index: 100
        top: 0
        left: 0
        width: 100%
        height: 100%
        overflow: auto
        display: flex
        -webkit-justify-content: center
        -webkit-align-items: center
        -webkit-backdrop-filter: blur(10px)
        background: rgba(7, 17, 27, .8)
        transition: all 0.5s ease
        &.fade-enter-active, &.fade-leave-active
          opacity: 1
          background: rgba(7, 17, 27, 0.8)
        &.fade-enter, &.fade-leave-active
          opacity: 0
          background: rgba(7, 17, 27, 0)
        .details-content
          width: 6.66rem
          background: #fff
          position: relative
          box-sizing: content-box
          .icon_close
            position: absolute
            font-size: 0.2rem
            color: #c08e3b
            top: 0
            right: 0
            padding: 0.12rem
            z-index: 1
          .code-wrapper.drift
            width: 100%
            position: absolute
            height: 100%
            z-index: 5
            -webkit-backdrop-filter: blur(10px)
            background: rgba(7, 17, 27, 0.8)
            display: flex
            -webkit-justify-content: center
            -webkit-align-items: center
          .info-code
            text-align: center
            padding: .5rem 0 .35rem 0
            position: relative
            width: 100%
            background: #fff
            span
              font-size: .16rem
            .icon_close
              font-size: .2rem
              color: $button-color
              position: absolute
              top: 0
              right: 0
              padding: 0.12rem
            #qrcodeCanvas
              border: 1px solid #555555
              padding: .05rem
              box-sizing: content-box
              width: 1.3rem
              height: 1.3rem
              margin: 0 auto
            p
              color: #000
              font-size: .16rem
              margin-top: .1rem
          .info
            display: flex
            padding: .3rem 1.2rem
            background: #ebdec7
            .left
              flex: 0 0 2.3rem
              img
                width: 1.82rem
                height: 2.42rem
                box-shadow: 1px 1px 7px 2px rgba(0, 0, 0, .44)
            .right
              flex: 1
              padding: .2rem 0
              width: 3rem
              .class-hour
                color: $button-color
              h2
                font-weight: 600
                line-height: .5rem
                font-size: .24rem
                color: #000
                overflow: hidden
                text-overflow: ellipsis
                white-space: nowrap
              p
                overflow: hidden
                text-overflow: ellipsis
                white-space: nowrap
                line-height: .4rem
                font-size: .16rem
                *
                  color: #444
                  font-size: .16rem
          .info.data-base
            padding: .3rem .45rem
            .left
              flex: 0 0 3rem
              img
                width: 2.6rem
                height: 1.6rem
            .right
              padding: 0
              h2
                line-height: inherit
              p
                line-height: .37rem
                &:last-child
                  line-height: .26rem
                  margin-top: .1rem
                  max-height: .9rem
                  overflow: hidden
          .content-validity
            padding: .3rem
            border-bottom: .3rem solid #ebdec7
            .content
              line-height: .36rem
            h2
              font-size: .18rem
              margin-bottom: .18rem
            .border-1px
              padding-bottom: 0.18rem
              line-height: .36rem
              border-1px($button-color)
            .directory-list
              li
                line-height: .5rem
                display: flex
                .title
                  flex: 1
                  color: #1d1d1d
                  display: inline-block
                  font-size: .16rem
                  overflow: hidden
                  white-space: nowrap
                  text-overflow: ellipsis
                .btn
                  flex: 0 0 2rem
                  text-align: right
                  input
                    width: .93rem
                    height: .3rem
                    line-height: .3rem
                    outline: none
                    background: #fff
                    border-radius: .3rem
                    color: $button-color
                    border: 1px solid $button-color
            .magazine
              height: 1.95rem
              overflow: hidden
              margin-top: .3rem
              ul
                white-space: nowrap
                overflow-x: auto
                overflow-y: hidden
                padding-bottom: .2rem
                li
                  width: 1.22rem
                  display: inline-block
                  line-height: inherit
                  text-align: center
                  margin-right: .4rem
                  &:last-child
                    margin-right: 0
                  img
                    box-shadow: 1px 1px 7px 2px rgba(0, 0, 0, 0.44)
                    width: 1.22rem
                    height: 1.62rem
                  p
                    margin-top: .15rem
                    overflow: hidden
                    text-overflow: ellipsis
                    white-space: nowrap

.g-footer /*底部*/
  width: 100%
  height: .7rem
  color: #fff
  line-height: .7rem
  text-align: center
  position: absolute
  bottom: 0
  background-color: $main-color
  border-bottom: 4px solid darken($main-color, 60%)
  > span
    *
      font-size: .14rem
    font-size: 0rem
    &:first-child
      margin-right: .3rem
      font-size: .14rem
    .icon_contact_number
      display: inline-block
      margin-right: .1rem
      font-size: .2rem
      color: #888
      position: relative
      top: .04rem